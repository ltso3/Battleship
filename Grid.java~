import java.util.*;

public class Grid {
//  private Vector<LinkedList<String>> shipLocations;
  private Hashtable<String, String> gridState;
  private Hashtable<String, Boolean> locations; 
  private Vector<Ship> ships;
  
  public Grid() {
    gridState = new Hashtable<String, String>();
    locations = new Hashtable<String, Boolean>();
    ships = new Vector<Ship>();
    
    for (int i = 65; i < 75; i ++) {
      for (int j = 1; j <11; j++) {
        gridState.put((char)(i) + Integer.toString(j), "Empty");
        locations.put((char)(i) + Integer.toString(j), false);
      }
    }
    
    int[] startCoord = {0,0};
    ships.add(new Ship("Destroyer", "vertical", startCoord));
    ships.add(new Ship("Submarine", "vertical", startCoord));
    ships.add(new Ship("Cruiser", "vertical", startCoord));
    ships.add(new Ship("Battleship", "vertical", startCoord));
    ships.add(new Ship("Carrier", "vertical", startCoord));
  }
  
  public void markMissile(String location) {
    grid.put(location, true);
  }
